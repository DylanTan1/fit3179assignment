{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/DylanTan1/fit3179-w9-hw/main/cleaned.csv"
    },
    "title": "Comparison of different gas emission per year between countries",
    "width": 800,
    "height": 400,
    "params": [
        {
            "name": "year_selected",
            "value": 2000,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2021,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": {
                "field": "country",
                "oneOf": [
                    "China",
                    "United States of America",
                    "Russia",
                    "Australia",
                    "India",
                    "Brazil",
                    "Germany"
                ]
            }
        },
        {
            "filter": "datum.year == year_selected"
        },
        {
            "fold": [
                "nitrous_oxide",
                "methane",
                "co2"
            ],
            "as": [
                "Gas",
                "value"
            ]
        }
    ],
    "mark": {
        "type": "bar",
        "size": 25
    },
    "encoding": {
        "x": {
            "field": "country",
            "type": "ordinal",
            "title": "Country"
        },
        "xOffset":{"field":"Gas"},
        "y": {
            "field": "value",
            "type": "quantitative",
            "title": "Gas emission(million tonnes)"
        },
        "color": {
            "field": "Gas",
            "type": "nominal"
        },
        "column": {
            "field": "Year",
            "type": "ordinal"
        },
        "tooltip":[
            {
                "field":"nitrous_oxide",
                "type": "quantitative",
                "title":"Nitrous oxide(million tonnes): "
            },
            {
                "field": "methane",
                "type": "quantitative",
                "title": "Methane(million tonnes): "
            },
            {
                "field": "co2",
                "type": "quantitative",
                "title": "Carbon dioxide(million tonnes): "
            }
        ]
    }
}